server {
    listen 80;

    {% if live_color == "blue" %}
    set $frontend_upstream frontend-blue:3000;
    {% else %}
    set $frontend_upstream frontend-green:3000;
    {% endif %}

    # -------------------------
    # Frontend (Blue / Green)
    # -------------------------
    location / {
        proxy_pass http://$frontend_upstream;
        proxy_http_version 1.1;

        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;

        # WebSocket support (ONLY for frontend)
        proxy_set_header Upgrade $http_upgrade;
        proxy_set_header Connection "upgrade";
    }

    # -------------------------
    # Backend API (IMPORTANT)
    # -------------------------
    location /api/ {
        proxy_pass http://backend:5000;
        proxy_http_version 1.1;

        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;

        # ‚ùå DO NOT use websocket headers for REST APIs
        proxy_set_header Upgrade "";
        proxy_set_header Connection "";

        # Prevent request body / buffering issues
        proxy_buffering off;
        proxy_request_buffering off;

        proxy_connect_timeout 5s;
        proxy_read_timeout 60s;
        proxy_send_timeout 60s;
    }
}
